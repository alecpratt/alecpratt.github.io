---
layout: page
---

<div class="post">
  <article>
    {% if site.data.projects %}
      {% assign proj = site.data.projects[page.index] %}
        {% if proj.project %}
          <h5> {{ proj.project }} </h5>
        {% endif %}

        {% if project.purpose %}
          <em> {{ project.purpose }} </em>
          <br>
        {% endif %}

        {% if project.abstract %}
          <strong>Abstract: </strong>
          {{ site.data.projectabstract[project.abstract] | markdownify}}
          <br>
        {% endif %}

        {% if project.file != "None" %}
          <a href="{{ project.file }}" download="pratta_{{ project.abstract }}.pdf"><strong>PDF Download</strong></a>
          <br>
        {% endif %}

        {% if project.link != "None" %}
          <a href="{{ project.link }}" target="_blank"><strong>Project Link</strong></a>
        {% endif %}
    {% endif %}
  </article>
</div>