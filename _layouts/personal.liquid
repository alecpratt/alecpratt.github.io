---
layout: page
---

<div class="post">
  <article>
      {% if site.personal %}
        {% for topic in site.personal %}

          <!-- Topic Header -->
          <div class="contentRow">
            {% if topic.topic %}
              {% if topic.align == "left" %}
                <div class="headerColumnL">
                  <h3> {{ topic.topic }} </h3>
                </div>
                <div class="headerColumnR">
                </div>
              {% else %}
                <div class="headerColumnL">
                </div>
                <div class="headerColumnR" align="right">
                  <h3> {{ topic.topic }} </h3>
                </div>
              {% endif %}
            {% endif %}
          </div>

          <div class="bodyText">
            <!-- Topic Image Alignment -->
            {% if topic.imagealign and topic.image %}
              <div class="float.{{ topic.imagealign }}">
                {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
                {% include figure.liquid loading="eager" path=topic.image class='img-fluid z-depth-1 rounded' sizes=sizes alt=topic.image %}
              </div>
            {% endif %}
            {{ topic.content }}


            {% if topic.data %}
              {% for book in site.data.booklist limit:15 %}
                <p style="text-align: center;">
                  <b>{{ book.book }}</b> - <em> {{ book.author }} </em>
                </p>
              {% endfor %}
            {% endif %}
          </div>

        {% endfor %}
     {% endif %}

  </article>
</div>